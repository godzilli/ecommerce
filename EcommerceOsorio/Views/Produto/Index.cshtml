@model List<Produto>
@{ 
    DateTime data = ViewBag.DataHora;
}
<h2>Gerenciamento dos Produtos</h2>

<table class="table table-hover table-striped" style="margin-top:15px;margin-bottom:15px">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Imagem</th>
            <th>Criado em</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Produto item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.Preco.ToString("C2")</td>
                <td>@item.Quantidade</td>
                <td>
                    <img src="~/ecommerceimagem/@item.Imagem" alt="@item.Descricao" style="width:200px" />
                </td>
                <td>@item.CriadoEm</td>
                <td>
                    <a asp-action="Remover" asp-route-id="@item.ProdutoId" class="btn btn-danger">Remover</a>
                </td>
                <td>
                    <a asp-action="Alterar" asp-route-id="@item.ProdutoId" class="btn btn-warning">Alterar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <b>Dados atualizados em: </b> @data
</p>
