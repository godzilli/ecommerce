<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    @* Barra de navegação *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Ecommerce</a>
        <li>
            <a asp-action="Cadastrar" asp-controller="Produto" class="btn btn-primary">Cadastrar Produto</a>
        </li>
        <li>
        <a asp-action="CadastroUsuario" asp-controller="Usuario" class="btn btn-primary">Cadastrar Usuario</a>
        </li>
    </nav>

    @* Conteúdo *@
    <div class="container" style="margin-top:30px;margin-bottom:30px">
        @RenderBody()
    </div>

    @* Rodapé *@
    <hr />
    <footer>
        <p style="text-align:center">
            &copy; @DateTime.Now.Year - Desenvolvido Jennifer Zilli
        </p>
    </footer>
</body>
</html>
